<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    	<!-- Partner -->
        <record id="sale_advertising_order.view_partner_tree_nsm_crm" model="ir.ui.view">
            <field name="name">res.partner.tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree string="Contacts">
                	<field name="lastname"/>
                    <field name="lastname" position="before">
                        <field name="ref" string="Customer ref."/>
                    </field>
                	<field name="city"/>
                    <field name="country_id"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="sector_id" string="Branche"/>
                    <field name="is_company"/>
                    <field name="parent_id"/>
                    <field name="firstname"/>
                    <field name="function"/>
                    <field name="user_id" string="Account Manager"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>